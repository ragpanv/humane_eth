            function checknum() {
                e = document.getElementById("phone");
                f = e.value;
                if (f.search(/^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$/) !== -1) {
                }
                else {
                    alert("enter correct mobile number");
                    e.value = '';
                }
            }
            function checkholder() {
                e = document.getElementById("projholder");
                f = e.value;
                if (f.search(/^[A-Za-z]+([\ A-Za-z]+)*/) !== -1 && f.length > 3) {
                }
                else {
                    alert("enter project holder name");
                    e.value = '';
                }
            }
            function checkmail() {
                k = document.getElementById("email");
                n = k.value;
                if (n.length < 5)
                    alert('enter email');
                if (n.search(/^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$/g) !== -1) {
                }
                else {
                    alert("enter correct email");
                    k.value = '';
                }

            }
            function checkadhaar() {
                l = document.getElementById("adhaar");
                m = l.value;
                if (m.search(/^[2-9]{1}[0-9]{3}\s{1}[0-9]{4}\s{1}[0-9]{4}$/) !== -1) {

                }
                else {
                    alert("enter correct Aadhar Number");
                    l.value = '';
                }

            }

            function checkname() {
                l = document.getElementById("name");
                m = l.value;
                if (m.search(/^[A-Za-z]+([\ A-Za-z]+)*/) !== -1 && m.length > 3) {
                }
                else {
                    alert("enter correct name");
                    l.value = '';
                }

            }

        </script>
</body>

</html>
